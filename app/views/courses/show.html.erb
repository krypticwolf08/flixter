<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= @courses.title %></h1>
  <br />

  <ul>
    <% @courses.sections.each do |section| %>
      <li>
        <%= section.title %>
      </li>
    <% end %>
  </ul>
  <br />
  <div class="row">
    <div class="col-sm-4 col-12 text-center">
      <span class="badge badge-default">
        <%= number_to_currency @courses.cost %>
      </span>
    </div>
    <br class="clr" />
    <% if current_user && current_user == @courses.user %>
      <br />
      <br />
      <%= link_to 'Administer', instructor_course_path(@courses), class: 'btn btn-danger btn-large' %>
    <% end %>

    <div class="col-sm-8 col-12">
      <%= @courses.description %>
    </div>
  </div>
</div>